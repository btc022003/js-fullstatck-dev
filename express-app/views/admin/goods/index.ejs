<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>商品列表</title>
    <link rel="stylesheet" href="/css/main.css" />
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
  </head>
  <body class="container mx-auto">
    <a class="btn inline-block my-2" href="/admin/goods/add">新增</a>

    <table class="m-table">
      <thead>
        <tr>
          <th class="w-20">序号</th>
          <th>名字</th>
          <th>价格</th>
          <th>创建时间</th>
          <th class="w-32">操作</th>
        </tr>
      </thead>
      <tbody>
        <% goods.forEach((item, index) =>{ %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= item.name%></td>
          <td><%= item.price%></td>
          <td><%= item.createdAt%></td>
          <td>
            <button class="px-2 py-1 bg-rose-700 text-white text-sm">
              删除
            </button>
            <button class="btn bg-slate-600 text-sm">修改</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
